<resources>

    <style name="BasicViewWrapped">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BasicViewFilled">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="BasicViewFilledHorizontally">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="BasicActivity" parent="BasicViewFilled">
        <item name="android:background">@drawable/content_background</item>
    </style>

    <style name="BasicFragment" parent="BasicViewFilled">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="ButtonLike" parent="BasicViewWrapped">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:drawableLeft">@drawable/icon_like</item>
    </style>

    <style name="BasicTextView" parent="BasicViewWrapped">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Column" parent="BasicViewFilled">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Content" parent="BasicViewFilled">

    </style>


    <style name="GuideTime" parent="BasicTextView">
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">30dip</item>
    </style>

    <style name="GuideItemTitle" parent="BasicTextView">
        <item name="android:textSize">12dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GuideItemTime" parent="BasicTextView">
        <item name="android:textSize">10dip</item>
    </style>

    <style name="Header" parent="BasicViewFilledHorizontally">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>

    <style name="HeaderText" parent="BasicViewWrapped">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dip</item>
    </style>


    <style name="TabBar" parent="BasicViewFilledHorizontally">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabBarIcon" parent="BasicViewWrapped">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>
    <style name="FriendsRequestTextPart1" parent="BasicViewWrapped">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">10dip</item>
    </style>
    <style name="FriendsRequestTextPart2" parent="FriendsRequestTextPart1">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="FriendsButton" parent="BasicViewWrapped">
        <item name="android:padding">2dip</item>
    </style>
    <style name="ListDivider" parent="BasicViewFilledHorizontally">
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="UpcomingShowsProgramTime" parent="BasicViewFilledHorizontally">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="UpcomingShowsProgramName" parent="UpcomingShowsProgramTime">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="UpcomingShowsButtons" parent="BasicViewWrapped">
        <item name="android:layout_marginTop">4dip</item>
    </style>

</resources>